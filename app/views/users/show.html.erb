<h1>My Dashboard</h1>

  <h2>My Bookings</h2>
  <div class='flexbox'>
    <% @bookings.each do |booking| %>
      <%= render 'components/bookingcard', booking: booking %>
    <% end %>
  </div>

  <h2>Hosted Bookings</h2>
  <div class='flexbox'>
    <% @locations.each do |location| %>
      <% location.bookings.each do |booking| %>
        <%= render 'components/host_booking_card', booking: booking %>
      <% end %>
    <% end %>
  </div>


<h2>My Locations</h2>
<div class='flexbox'>
  <% @locations.each do |location| %>
    <%= link_to location_path(location) do %>
      <div class='location_dash_card' style="background-image: url(<%= location.image_url %>)">
        <%= location.name %>
      </div>
    <% end %>
  <% end %>
</div>
