<!DOCTYPE html>
<html>
  <head>
    <title>FilmLocationFinder</title>
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/flatpickr/dist/flatpickr.min.css">
    <link href="https://api.mapbox.com/mapbox-gl-js/v2.11.0/mapbox-gl.css" rel="stylesheet">
  </head>

  <body>
    <div class="wrapper">
      <!-- Navbar -->
      <div class="navbar navbar-expand-sm">
        <div class="container-fluid">
          <%= link_to "#", class: "navbar-brand" do %>
            <%= image_tag "" %>
          <% end %>
          <%#= link_to "Home", "#", class: "nav-link" %>

          <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav me-auto">
              <% if user_signed_in? %>
                <li class="nav-item">
                  <%= link_to "Home", root_path , class: "nav-link", style: "color: white" %>
                </li>
                <li class="nav-item">
                  <%= link_to "Locations", locations_path, class: "nav-link", style: "color: white" %>
                </li>
                <li class="nav-item">
                  <%= link_to "Dashboard", dashboard_path, class: "nav-link", style: "color: white" %>
                </li>
              <% else %>
                <li class="nav-item">
                  <%= link_to "Login", new_user_session_path, class: "nav-link", style: "color: white" %>
                </li>
              <% end %>
            </ul>
            <div class="title">
              <h1> Film Location Finder </h1>
            </div>
          </div>
        </div>
      </div>

      <!-- Content -->
      <div class="container">
          <%= yield %>
      </div>

      <!-- Footer -->
    </div>
  </body>
</html>
