<div class="title-flex">
  <h1><%= @location.name%></h1>
    <%= link_to location_path(@location), data: { turbo_method: :delete, turbo_confirm: "Are you sure?" } do %>
      <i class="fa-solid fa-trash-can fa-2xl trashcan" style="color: #ffffff;"></i>
    <% end %>
</div>

<div class="main-flex">
  <div>
    <img class="title-image" src="<%= asset_path(@location.image_url) %>">
  </div>

  <div class="description-booking">
      <ul class="description">
        <li>Description:<%= @location.description %></li>
        <li>City: <%= @location.city %></li>
        <li>Address:<%= @location.address %></li>
        <li>Style: <%= @location.style %></li>
        <li>Rooms: <%= @location.rooms %></li>
        <li>Cost Per Day: <%= @location.cost_per_day %></li>
        <li>Outdoor Space: <%= @location.outdoor_space? ? "Yes" : "No" %></li>
      </ul>

        <h2>New Booking</h2>
          <%= simple_form_for [@location, @booking] do |f| %>
            <%= f.input :start_date, as: :string, input_html: { data: { controller: "datepicker" } } %>
            <%= f.input :end_date, as: :string, input_html: { data: { controller: "datepicker" } } %>
            <%= f.input :offer %>
            <%= f.submit 'Request Booking', class: "btn" %>
          <% end %>
  </div>
</div>
